{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../../..",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@libs/(.*)$": "<rootDir>/libs/$1",
    "^@lumir-company/(.*)$": "<rootDir>/node_modules/@lumir-company/$1"
  },
  "testPathIgnorePatterns": ["/node_modules/", "/dist/"]
}
